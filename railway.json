{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "commands": [
      { "name": "Install Chrome", "use": "@nixpacks/chromium" },
      { "name": "Install ChromeDriver", "use": "@nixpacks/chromedriver" }
    ]
  },
  "deploy": {
    "startCommand": "hypercorn main:app --bind \"[::]:$PORT\""
  }
}
