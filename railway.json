{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "commands": [
      { "name": "Install Chrome", "use": "@nixpacks/google-chrome-unstable" },
      { "name": "Install Chromedriver", "use": "@nixpacks/chromedriver" },
      { "name": "Install Additional Dependencies", "use": "apt-get update && apt-get install -y libglib2.0-0 libnss3 libx11-6" }
    ]
  },
  "deploy": {
    "startCommand": "hypercorn main:app --bind \"[::]:$PORT\""
  }
}
