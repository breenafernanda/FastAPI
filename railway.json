{
  "$schema": "https://railway.app/railway.schema.json",

  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "providers": ["...", "python"],
      "phases": {
        "setup": {
          "nixPkgs": ["...", "google-chrome", "chromedriver"]
        }
      }
    
  }
}
  "deploy": {
    "startCommand": "hypercorn main:app --bind \"[::]:$PORT\""
  },
  "providers": [
    {
      "name": "chromedriver",
      "version": "94.0.4606.61"
    }
  ]
}
