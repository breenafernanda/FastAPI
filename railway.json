{
  "build": {
    "env": {
      "NIX_PATH": "nixpkgs=/nix/var/nix/profiles/per-user/root/channels/nixos/nixpkgs"
    },
    "steps": [
      {
        "name": "Install Chrome",
        "script": "apt-get install google-chrome-stable"
      }
    ]
  },
  "deploy": {
    "startCommand": "hypercorn main:app --bind \"[::]:$PORT\""
  }
}
