{
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "providers": ["...", "python"],
      "phases": {
        "setup": {
          "nixPkgs": ["...", "python"]
        },
        "preBuild": {
          "commands": [
            "python -m venv /opt/venv",
            ". /opt/venv/bin/activate",
             "python -V" 
          ]
        }
      }
    }
  },
  "deploy": {
    "startCommand": "hypercorn main:app --bind \"[::]:$PORT\""
  }
}
