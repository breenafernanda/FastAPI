{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "commands": [
      { "name": "Install Chrome", "use": "@nixpacks/chromium" },
      { "name": "Update WebDriver Manager", "use": "@nixpacks/webdriver-manager update" }
    ]
  },
  "deploy": {
    "startCommand": "hypercorn main:app --bind \"[::]:$PORT\""
  }
}
